{
  "name": "@sveltejs/vite-plugin-svelte",
  "version": "1.1.1",
  "license": "MIT",
  "author": "dominikg",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json",
    "./src/ui/*": "./src/ui/*"
  },
  "scripts": {
    "dev": "pnpm build:ci --sourcemap --watch src",
    "build:ci": "rimraf dist && tsup-node src/index.ts --format esm,cjs --no-splitting --shims",
    "build": "pnpm build:ci --dts --sourcemap"
  },
  "engines": {
    "node": "^14.18.0 || >= 16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sveltejs/vite-plugin-svelte.git",
    "directory": "packages/vite-plugin-svelte"
  },
  "keywords": [
    "vite-plugin",
    "vite plugin",
    "vite",
    "svelte"
  ],
  "bugs": {
    "url": "https://github.com/sveltejs/vite-plugin-svelte/issues"
  },
  "homepage": "https://github.com/sveltejs/vite-plugin-svelte#readme",
  "dependencies": {
    "debug": "^4.3.4",
    "deepmerge": "^4.2.2",
    "kleur": "^4.1.5",
    "magic-string": "^0.26.7",
    "svelte-hmr": "^0.15.0"
  },
  "peerDependencies": {
    "diff-match-patch": "^1.0.5",
    "svelte": "^3.44.0",
    "vite": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "diff-match-patch": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/diff-match-patch": "^1.0.32",
    "diff-match-patch": "^1.0.5",
    "esbuild": "^0.15.13",
    "rollup": "^2.79.1",
    "svelte": "^3.52.0",
    "tsup": "^6.4.0",
    "vite": "^3.2.3"
  }
}
