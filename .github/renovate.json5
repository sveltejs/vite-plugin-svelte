{
	"extends": [
		"config:base",
		"schedule:weekly", // each monday
		"group:allNonMajor", // batch non-majors into one PR
		":semanticCommits" // nicer commit messages
	],
	"labels": ["dependencies"],
	"pin": false,
	"rangeStrategy": "bump",
	"node": false,
	"packageRules": [
		{
			"matchDepTypes": ["peerDependencies"],
			"enabled": false
		}
	]
}
